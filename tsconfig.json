{
	"include": [ "src/**/*.ts" ],
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "Node16",
		"typeRoots": [ "./src/@types" ],
		"outDir": "./dist",
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		"sourceMap": true,
		"verbatimModuleSyntax": true,
	}
}
